<div class="col-lg-4 col-md-6 px-md-2" id= "recipe_<%= recipe.id %>">
  <div class="card">
    <div class="card-header p-0 position-relative">
      <a href="#">
        <%= image_tag("blog1.jpg", :alt => "Card image cap", class: "card-img-bottom") %>
        <span class="fa fa-book post-icon"></span>
      </a>
    </div>
    <div class="card-body">
      <h6 class="let-spa mb-3"><%= recipe.try(:created_at).strftime("%d-%m-%Y") %></h6>
      <h5 class="blog-title card-title">
        <a href="#"><%= recipe.name %></a>
      </h5>
      <div class="row mt-5">
        <div class="col-3 testi-img-res px-2">
          <%= image_tag("te1.jpg", :alt => "", class: "img-fluid rounded-circle") %>
        </div>
        <div class="col-9 w3_testi_grid mt-xl-2 mt-lg-0 mt-md-2 mt-4">
          <h5 class="mb-1"><%= recipe.user.try(:name)%> <%= recipe.user.try(:last_name)%></h5>
          <p>Sed do eiusmod</p>
        </div>
      </div>
    </div>
  </div>
</div>