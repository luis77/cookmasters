<p id="notice"><%= notice %></p>
<!-- about -->
<section class="w3ls-bnrbtm py-5" id="about">
	<div class="container py-xl-5 py-lg-3">

		<div class="row flex-row-reverse pb-5">
			<div class="col-lg-6">
			<%= image_tag(@recipe.foto.url(:thumb), :alt => "Card image cap", class: "img-fluid mt-5") %>
			</div>
			<div class="col-lg-6 abou-right-w3layuts mt-5">
				<h3 class="mb-4"><%= @recipe.name %></h3>
				<h4 class="mb-4">Ingredientes:</h4>
				
				<ul class="ingredientes">
				    <% @recipe.ingredients.each do |ingrediente| %>
						<li type="disc"><%= ingrediente.name %></li>
				    <% end %>
				</ul>

			</div>
		</div>

		<div class="row flex-row-reverse pb-5">
			<div class="col-lg-12 abou-right-w3layuts mt-5">
				<h3 class="mb-4">Preparaci√≥n:</h3>
				<p style="font-size: 1.1em;"><%= @recipe.body %></p>
			</div>
		</div>
		<div class="row flex-row-reverse pb-5">
			<div class="col-lg-12 abou-right-w3layuts mt-5">

				<p style="font-size: 1.1em; text-align: center;"> 
				<% if @me_gusta.present? %>
					<%= link_to 'Me gusta', recipe_like_path(:id => @recipe.try(:id)), remote: true, data: { disable_with: 'Gustando...' },id:"me_gusta", class: "fa fa-heart", style:"color: rgb(227, 30, 38); outline: 0;" %> 
				<%else%>
					<%= link_to 'Me gusta', recipe_like_path(:id => @recipe.try(:id)), remote: true, data: { disable_with: 'Sin gustar...' },id:"me_gusta", class: "fa fa-heart", style:"color: #999; outline: 0;" %>
				<%end%>
				 |
				 <%= link_to 'Descargar pdf', recipe_path(:format => 'pdf'), target: :_blank, class: "fa fa-file-pdf-o", style:"color: #999;"  %>
				 	
				 </p>
			</div>
		</div>

	</div>

	   
</section>
<!-- //about -->

