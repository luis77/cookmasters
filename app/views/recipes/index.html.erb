<p id="notice"><%= notice %></p>
<%= link_to 'New Recipe', new_recipe_path %>

<div class="text-center">
  <!-- Button trigger modal -->
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#mi_nueva_receta">
    Nueva receta
  </button>
</div>


<!-- Modal -->
<%= form_for(@recipe, remote: true, html: {class: "form-horizontal"}) do |f| %> <!--ajax remote: true-->
<div class="modal fade bd-example-modal-lg" id="mi_nueva_receta" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Mi nueva receta</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

        <div class="form-group">
          <div class="col-md-8">
           Nombre: <%= f.text_field :name, class: "form-control",autofocus: true, minlength: "1"  %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-12">
            <button type="button" class="btn btn-success btn-xs" onclick="miIngrediente()">
             Añadir ingrediente
            </button>
          </div>
        </div>

        <%= fields_for :lista do |ff|%>
         <div id="ingredientes" class="form-group">







            
            <div class="form-group">
              <%= f.label :Clave, "Clave:", class: "control-label col-md-2"  %>
              <div class="col-md-4">
                  <input type="text" id="ingrediente_1" value="" name="lista[ingrediente_1]" class="ingredientes" placeholder="ingrediente 1" />
              </div>

              <%= f.label :Descripcion, "Descripción:", class: "control-label col-md-2"  %>
              <div class="col-md-4">
                  <input type="text" id="ingrediente_1" value="" name="lista[ingrediente_1]" class="ingredientes" placeholder="ingrediente 1" />
              </div>
            </div>







         </div>
        <% end %>

        <div class="form-group">
          <%= f.label :body, "Descripción:", class: "control-label col-md-2"  %>
          <div class="col-md-12">
            <%= f.text_area :body, class: "form-control",style:"height: 200px;" %>
          </div>
        </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
        <%= submit_tag "Crear", class: "btn btn-primary", data: { disable_with: 'Creando' }%>
      </div>
    </div>
  </div>
</div>
<%end%>


