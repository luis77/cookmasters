  <div class="input-group mb-2">
    <div class="input-group-prepend">
    	<div class="input-group-text">
    	<% if f.object.id !=nil %>
				<%= link_to '', eliminar_ingrediente_path(:id => f.object.id, :index => f.index), class: "fa fa-trash", remote:true, data: {confirm: "¿Está seguro que desea eliminarlo?"}, style:"color: rgb(144, 142, 142);" %>
		<%end%>
			</div>
    </div>



    <%= f.text_field :name, label:false, class:"recipe_ingredientes form-control", placeholder:"Ingrediente"  %>
  </div>


</div>




